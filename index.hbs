                <article class="{{post_class}}">
                    <div class="row">
                        {{#if image}}
                        <div class="col-md-4">
                            <div class="image">
                                <a href="{{url}}">
                                    <img src="{{image}}" class="img-responsive" alt="{{title}}">
                                </a>
                            </div>
                        </div>
                        {{/if}}

                        <div {{#if image}} class="col-md-8" {{else}} class="col-md-12" {{/if}}>
