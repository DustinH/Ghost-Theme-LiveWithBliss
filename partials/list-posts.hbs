{{^is "home"}}
{{#foreach posts limit="1"}}
<div class="row" id="blog-listing-big">
    <section class="post">
        <h2><a href="{{url}}">{{title}}</a></h2>
        <div class="row">
            <div class="col-sm-6">
                <p class="author-category">By <a href="{{author.url}}">{{author.name}}</a>{{tags prefix=" in "}}</p>
            </div>
            <div class="col-sm-6">
                <p class="date-comments">
                    <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}"><a href="{{url}}"><i class="fa fa-calendar-o"></i> {{date format="DD MMMM YYYY"}}</a></time>
                    {{!--<a href="blog-post.html"><i class="fa fa-comment-o"></i> 8 Comments</a>--}}
                </p>
            </div>
        </div>
        <div class="image">
            <a href="{{url}}">
                <img src="{{image}}" class="img-responsive" alt="{{title}}">
            </a>
        </div>
        <p class="intro">{{ excerpt words="75" }}</p>
        <p class="read-more"><a href="{{url}}" class="btn btn-template-main">Continue reading</a>
        </p>
    </section>
</div>
{{/foreach}}
{{/is}}

<div class="row" id="blog-listing-medium">
    <section class="blog-content">

    {{#foreach posts}}
    {{#is "home"}}
        {{> post-formatter}}
    {{else}}
        {{^if @first}}
            {{> post-formatter}}
        {{/if}}
    {{/is}}
    {{/foreach}}
    </section>
</div>


